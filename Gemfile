  gem 'capybara'
  gem 'selenium-webdriver'
  gem 'sqlite3'
end

group :development do
  gem 'listen'
  gem 'pry-rails'
  gem 'rubocop'
  gem 'simplecov', require: false
  gem 'web-console'
end

group :production do
  gem 'dalli'
  gem 'memcachier'
  gem 'pg'
end

group :test do
  gem 'coveralls', require: false
  gem 'vcr'
  gem 'webmock'
end
